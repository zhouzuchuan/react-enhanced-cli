#!/usr/bin/env node
'use strict';

const program = require('commander');
const join = require('path').join;
const spawn = require('win-spawn');
const exists = require('fs').existsSync;
const printLogo = require('../src/print-logo')

// Notify update when process exits
const updater = require('update-notifier');
const pkg = require('../package.json');
updater({ pkg: pkg }).notify({ defer: true });

if (process.argv.slice(2).join('') === '-v') {
  printLogo()
  return;
}

program
  .usage('<command> [options]')
  .on('--help', printHelp)
  .parse(process.argv);

function printHelp() {
  console.log('  Commands:');
  console.log();
  console.log('    create         Creates a new application');
  console.log('    init           Init a new RE application in the current folder');
  console.log();
  console.log('  All commands can be run with -h (or --help) for more information.')

  printLogo()
}


const args = process.argv.slice(3);
let subcmd = program.args[0];

if (!subcmd) {
  program.help();
} else {
  const bin = executable(subcmd);
  if (bin) {
    wrap(spawn(bin, args, {stdio: 'inherit', customFds: [0, 1, 2]}));
  } else {
    program.help();
  }
}
function wrap(sp) {
  sp.on('close', function(code) {
    process.exit(code);
  });
}



function executable(subcmd) {
  var file = join(__dirname, 'rec-' + subcmd);
  if (exists(file)) {
    return file;
  }
}
